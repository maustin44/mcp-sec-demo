# GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=your_org/your_repo

# LLM Provider: "ollama" (local, free) or "anthropic" (API)
LLM_PROVIDER=ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# Only needed if LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_key_here

# Notion integration (optional but recommended)
# Get token at: notion.so/my-integrations
# Page ID is the long string in your Notion page URL
NOTION_TOKEN=secret_your_notion_token_here
NOTION_PAGE_ID=your_notion_page_id_here
